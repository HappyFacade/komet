   rxNormIssuePropertySheetMenuItem.addPropertyToEdit("RxNorm issue", MetaData.STRING_VALUE_FOR_SEMEME____ISAAC, PropertyEditorType.STATUS);
   /* */
   PropertySheetMenuItem solorIssuePropertySheetMenuItem = $addAttachmentToVersion.makePropertySheetMenuItem("Add SOLOR issue");
   solorIssuePropertySheetMenuItem.addPropertyToEdit("SOLOR issue", MetaData.STRING_VALUE_FOR_SEMEME____ISAAC, PropertyEditorType.STATUS);
   /* */
